<odoo>

    <template id="prelude">
        <link rel="stylesheet" href="https://unpkg.com/flowbite@1.5.4/dist/flowbite.min.css" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="" />
        <link href="https://fonts.googleapis.com/css2?family=Inter" rel="stylesheet" />
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        <script src="https://cdn.tailwindcss.com"></script>
        <script src="https://unpkg.com/flowbite@1.5.4/dist/flowbite.js"></script>
        <script src="https://unpkg.com/flowbite@1.5.4/dist/datepicker.js"></script>
        <style>
            h1 {
                font-size: 2em !important;
                text-align: center;
                margin-bottom: 32px !important;
                font-weight: 700 !important;
            }
            h2 {
                font-size: 1.5em !important;
                margin-top: 48px !important;
                margin-bottom: 16px !important;
                font-weight: 600 !important;
            }
            *:not(.material-symbols-rounded) {
                font-family: 'Inter' !important;
            }
        </style>
    </template>

    <template id="navbar">
        <t t-set="logged_in" t-value="website.user_id != user_id" />

        <nav class="bg-white px-4 sm:px-4 py-2.5  fixed w-full z-20 top-0 left-0 border-b border-gray-200 ">
            <div class="container flex flex-wrap items-center justify-between mx-auto">
                <a href="/asset" class="flex items-center">
                    <span class="self-center text-xl font-semibold whitespace-nowrap">Media Kreatif Sentosa</span>
                </a>
                <div class="flex md:order-2">
                    <t t-if="not logged_in">
                        <a href="/web/login?redirect=%2Fasset" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-lg text-sm px-5 py-2.5 text-center mr-3 md:mr-0">Login</a>
                    </t>
                    <t t-if="logged_in">
                        <a href="/web/session/logout" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-lg text-sm px-5 py-2.5 text-center mr-3 md:mr-0">Logout</a>
                    </t>
                </div>
                <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
                    <t t-if="logged_in">
                        <ul class="flex flex-col p-4 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-semibold md:border-0 md:bg-white   ">
                            <li>
                                <a href="/asset/items" class="block font-semibold py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0">Stok</a>
                            </li>
                            <li>
                                <a href="/asset/rentals" class="block font-semibold py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0">Penyewaan</a>
                            </li>
                            <li>
                                <a href="/asset/returns" class="block font-semibold py-2 pl-3 pr-4 text-gray-700 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0">Pengembalian</a>
                            </li>
                        </ul>
                    </t>
                </div>
            </div>
        </nav>

    </template>

    <template id="index">
        <t t-set="title">Sistem Pencatatan Stok Aset</t>
        <t t-call="PunyaSaudara.prelude" />
        <t t-call="PunyaSaudara.navbar" />
        <div class="oe_structure">
            <div class="container">
                    Check
                </div>
        </div>
    </template>

    <template id="barang">
        <t t-set="title">Stok Aset</t>
        <t t-call="PunyaSaudara.prelude" />
        <t t-call="PunyaSaudara.navbar" />


        <div class="w-4/5 mx-auto mt-28">
            <h1>Stok Aset Perusahaan</h1>

            <a href="/asset/items/new">
                <button type="button" class="text-blue-700
                    hover:text-white hover:bg-blue-700 focus:outline-none
                    font-semibold rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-4
                    flex gap-1 items-center border-2 border-solid border-blue-700
                    ">
                    <span class="material-symbols-rounded relative">
                    add
                </span>
                    <span>Tambah barang</span>
                </button>
            </a>
            <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="py-3 px-6">Nama Barang</th>
                            <th scope="col" class="py-3 px-6">Kuantitas</th>
                            <th scope="col" class="py-3 px-6"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="items" t-as="item">
                            <t t-if="item_index % 2 == 0">
                                <th scope="row" class="py-4 px-6 font-semibold text-gray-900 whitespace-nowrap">
                                    <t t-esc="item.name" />
                                </th>
                                <td class="py-4 px-6">
                                    <t t-esc="item.qty" />
                                </td>
                                <td class="py-4 px-6">
                                    <a t-att-href="'/asset/items/produce?id=' + str(item_index + 1)" class="font-semibold cursor-pointer text-blue-600 hover:underline">Produksi</a>
                                </td>
                            </t>
                            <t t-if="item_index % 2 == 1">
                                <tr class="bg-gray-50 border-b">
                                    <th scope="row" class="py-4 px-6 font-semibold text-gray-900 whitespace-nowrap">
                                        <t t-esc="item.name" />
                                    </th>
                                    <td class="py-4 px-6">
                                        <t t-esc="item.qty" />
                                    </td>
                                    <td class="py-4 px-6">
                                        <a t-att-href="'/asset/items/produce?id=' + str(item_index + 1)" class="font-semibold cursor-pointer text-blue-600 hover:underline">Produksi</a>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>

    </template>

    <template id="barang_new">
        <t t-set="title">Tambah Barang</t>
        <t t-call="PunyaSaudara.prelude" />
        <t t-call="PunyaSaudara.navbar" />


        <div class="w-4/5 mx-auto mt-28">
            <h1>Tambah Barang Baru</h1>
            <form method="POST" action="/asset/items/new">
                <div class="grid gap-6 mb-6 md:grid-cols-2">
                    <div class="mb-6">
                        <label for="name" class="block mb-2 text-sm font-semibold text-gray-900">Nama barang</label>
                        <input id="name" name="name" type="text" placeholder="Barang" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" required="true" />
                    </div>
                </div>
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Submit</button>
            </form>
        </div>

    </template>

    <template id="barang_produce">
        <t t-set="title">Produksi Barang</t>
        <t t-call="PunyaSaudara.prelude" />
        <t t-call="PunyaSaudara.navbar" />


        <div class="w-4/5 mx-auto mt-28">
            <h1>Produksi Barang</h1>
            <form method="POST" action="/asset/items/produce">
                <div class="grid gap-6 mb-6 md:grid-cols-2">
                    <div class="mb-6">
                        <label for="id" class="block mb-2 text-sm font-semibold text-gray-900">Barang yang diproduksi</label>
                        <t t-set="given_id" t-value="int(request.params.get('id')) if request.params.get('id') else 0" />

                        <select id="id" name="id" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                            <t t-foreach="items" t-as="item">
                                <t t-if="given_id == item.id">
                                    <option t-att-value="item.id" selected="selected">
                                        <t t-esc="item.name" />
                                    </option>
                                </t>
                                <t t-else="">
                                    <option t-att-value="item.id">
                                        <t t-esc="item.name" />
                                    </option>
                                </t>
                            </t>
                        </select>
                    </div>
                    <div class="mb-6">
                        <label for="qty" class="block mb-2 text-sm font-semibold text-gray-900">Kuantitas produksi</label>
                        <input id="qty" name="qty" type="number" min="1" step="1" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="1" required="true" />
                    </div>
                </div>
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Submit</button>
            </form>
        </div>


    </template>

    <template id="penyewaan">
        <t t-set="title">Penyewaan Barang</t>
        <t t-call="PunyaSaudara.prelude" />
        <t t-call="PunyaSaudara.navbar" />


        <div class="w-4/5 mx-auto mt-28">
            <h1>Penyewaan Barang</h1>
            <a href="/asset/rentals/new">
                <button type="button" class="text-blue-700
                    hover:text-white hover:bg-blue-700 focus:outline-none
                    font-semibold rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-4
                    flex gap-1 items-center border-2 border-solid border-blue-700
                    ">
                    <span class="material-symbols-rounded relative">
                    add
                </span>
                    <span>Sewa barang</span>
                </button>
            </a>
            <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="py-3 px-6">Penyewa</th>
                            <th scope="col" class="py-3 px-6">Nama Barang</th>
                            <th scope="col" class="py-3 px-6">Kuantitas</th>
                            <th scope="col" class="py-3 px-6">Tanggal Penyewaan</th>
                            <th scope="col" class="py-3 px-6">Durasi Sewa</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="rental_items" t-as="rental_item">
                            <t t-if="rental_item_index % 2 == 0">
                                <th scope="row" class="py-4 px-6 font-semibold text-gray-900 whitespace-nowrap">
                                    <t t-esc="rental_item.rental.client" />
                                </th>
                                <td class="py-4 px-6">
                                    <t t-esc="rental_item.item.name" />
                                </td>
                                <td class="py-4 px-6">
                                    <t t-esc="rental_item.qty" />
                                </td>
                                <td class="py-4 px-6">
                                    <t t-esc="rental_item.rental.date_string()" />
                                </td>
                                <td class="py-4 px-6">
                                    <t t-esc="rental_item.rental.duration" />
                                    hari
                                </td>
                            </t>
                            <t t-if="rental_item_index % 2 == 1">
                                <tr class="bg-gray-50 border-b">
                                    <th scope="row" class="py-4 px-6 font-semibold text-gray-900 whitespace-nowrap">
                                        <t t-esc="rental_item.rental.client" />
                                    </th>
                                    <td class="py-4 px-6">
                                        <t t-esc="rental_item.item.name" />
                                    </td>
                                    <td class="py-4 px-6">
                                        <t t-esc="rental_item.qty" />
                                    </td>
                                    <td class="py-4 px-6">
                                        <t t-esc="rental_item.rental.date_string()" />
                                    </td>
                                    <td class="py-4 px-6">
                                        <t t-esc="rental_item.rental.duration" />
                                        hari
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </template>

    <template id="penyewaan_new">
        <t t-set="title">Tambah Penyewaan Baru</t>
        <t t-call="PunyaSaudara.prelude" />
        <t t-call="PunyaSaudara.navbar" />

        <div class="w-4/5 mx-auto mt-28">
            <h1>Tambah Penyewaan Baru</h1>
            <form method="POST" action="/asset/rentals/new">
                <div class="grid gap-6 mb-6 md:grid-cols-2">
                    <div class="mb-6">
                        <label for="rental-id" class="block mb-2 text-sm font-semibold text-gray-900">Penyewaan</label>
                        <select id="rental-id" name="rental-id" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                            <t t-foreach="rentals" t-as="rental">
                                <option t-att-value="rental.id">
                                    <t t-esc="rental.client" />
                                    <t t-esc="'(' +rental.date_string() + ', '" />
                                    <t t-esc="rental.duration" />
                                    hari)
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="mb-6">
                        <label for="item-id" class="block mb-2 text-sm font-semibold text-gray-900">Barang yang disewa</label>
                        <select id="item-id" name="item-id" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                            <t t-foreach="items" t-as="item">
                                <option t-att-value="item.id">
                                    <t t-esc="item.name" />
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="mb-6">
                        <label for="qty" class="block mb-2 text-sm font-semibold text-gray-900">Kuantitas penyewaan</label>
                        <input id="qty" name="qty" type="number" min="1" step="1" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="1" required="true" />
                    </div>
                </div>
                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Submit</button>
            </form>
            <h2>Tidak menemukan penyewaan?</h2>
            <form method="POST" action="/asset/rentals/new-rental">
                <div class="grid gap-6 mb-6 md:grid-cols-2">
                    <div class="mb-6">
                        <label for="client" class="block mb-2 text-sm font-semibold text-gray-900">Penyewa</label>
                        <input id="client" name="client" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" required="true" />
                    </div>
                    <div class="mb-6">
                        <label for="duration" class="block mb-2 text-sm font-semibold text-gray-900">Durasi sewa (hari)</label>
                        <input id="duration" name="duration" type="number" min="1" step="1" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" required="true" />
                    </div>
                    <div class="mb-6">
                        <label for="date" class="block mb-2 text-sm font-semibold text-gray-900">Tanggal penyewaan</label>
                        <div class="relative">
                            <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                                <svg aria-hidden="true" class="w-5 h-5 text-gray-500" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                            <input id="date" datepicker="" name="date" type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5" placeholder="Select date" />
                        </div>
                    </div>
                </div>

                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-semibold rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center">Submit</button>
            </form>
        </div>
    </template>

    <template id="pengembalian">
        <t t-set="title">Pengembalian Barang</t>
        <t t-call="PunyaSaudara.prelude" />
        <t t-call="PunyaSaudara.navbar" />


        <div class="w-4/5 mx-auto mt-28">
            <h1>Tambah Pengembalian Baru</h1>
            <a href="/asset/returns/new">
                <button type="button" class="text-blue-700
                    hover:text-white hover:bg-blue-700 focus:outline-none
                    font-semibold rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-4
                    flex gap-1 items-center border-2 border-solid border-blue-700
                    ">
                    <span class="material-symbols-rounded relative">
                    add
                </span>
                    <span>Kembalikan barang</span>
                </button>
            </a>
            <div class="overflow-x-auto relative shadow-md sm:rounded-lg">
                <table class="w-full text-sm text-left text-gray-500">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="py-3 px-6">Penyewa</th>
                            <th scope="col" class="py-3 px-6">Nama Barang</th>
                            <th scope="col" class="py-3 px-6">Kuantitas</th>
                            <th scope="col" class="py-3 px-6">Tanggal Pengembalian</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="return_items" t-as="return_item">
                            <t t-if="return_item_index % 2 == 0">
                                <th scope="row" class="py-4 px-6 font-semibold text-gray-900 whitespace-nowrap">
                                    <t t-esc="return_item.rental.client" />
                                </th>
                                <td class="py-4 px-6">
                                    <t t-esc="return_item.item.name" />
                                </td>
                                <td class="py-4 px-6">
                                    <t t-esc="return_item.qty" />
                                </td>
                                <td class="py-4 px-6">
                                    <t t-esc="return_item.return_.date_string()" />
                                </td>
                            </t>
                            <t t-if="return_item_index % 2 == 1">
                                <tr class="bg-gray-50 border-b">
                                    <th scope="row" class="py-4 px-6 font-semibold text-gray-900 whitespace-nowrap">
                                        <t t-esc="return_item.rental.client" />
                                    </th>
                                    <td class="py-4 px-6">
                                        <t t-esc="return_item.item.name" />
                                    </td>
                                    <td class="py-4 px-6">
                                        <t t-esc="return_item.qty" />
                                    </td>
                                    <td class="py-4 px-6">
                                        <t t-esc="return_item.return_.date_string()" />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
            </div>
        </div>
    </template>

    <template id="pengembalian_new">
        <t t-set="title">Tambah Pengembalian Barang Baru</t>
        <t t-call="PunyaSaudara.prelude" />
        <t t-call="PunyaSaudara.navbar" />


        <div class="w-4/5 mx-auto mt-28">
            <h1>Tambah Pengembalian Baru</h1>
            <form method="POST" action="/asset/returns/new">
                <div class="grid gap-6 mb-6 md:grid-cols-2">
                    <div class="mb-6">
                        <label for="return-id" class="block mb-2 text-sm font-semibold text-gray-900">Pengembalian</label>
                        <select id="return-id" name="return-id" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                            <t t-foreach="returns" t-as="return">
                                <option t-att-value="return.id">
                                    <t t-esc="return.date_string()" />
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="mb-6">
                        <label for="rental-id" class="block mb-2 text-sm font-semibold text-gray-900">Penyewaan</label>
                        <select id="rental-id" name="rental-id" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                            <t t-foreach="rentals" t-as="rental">
                                <option t-att-value="rental.id">
                                    <t t-esc="rental.client" />
                                    (
                                    <t t-esc="rental.date_string()" />
                                    ,
                                    <t t-esc="rental.duration" />
                                    hari)
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="mb-6">
                        <label for="item-id" class="block mb-2 text-sm font-semibold text-gray-900">Barang yang disewa</label>
                        <select id="item-id" name="item-id" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                            <t t-foreach="items" t-as="item">
                                <option t-att-value="item.id">
                                    <t t-esc="item.name" />
                                </option>
                            </t>
                        </select>
                    </div>
                    <div class="mb-6">
                        <label for="qty" class="block mb-2 text-sm font-semibold text-gray-900">Kuantitas penyewaan</label>
                        <input id="qty" name="qty" type="number" min="1" step="1" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="1" required="true" />
                    </div>
